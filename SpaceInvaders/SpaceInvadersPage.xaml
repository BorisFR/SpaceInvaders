<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:SpaceInvaders" x:Class="SpaceInvaders.SpaceInvadersPage" BackgroundColor="Black">
	<ScrollView Orientation="Vertical" BackgroundColor="White">
		<StackLayout Orientation="Vertical" BackgroundColor="Yellow" Margin="0,1,0,0" Spacing="0">
			<!--<BoxView HeightRequest="30" />-->
			<Image x:Name="theMarquee" Aspect="AspectFit" BackgroundColor="Red" />
			<Image x:Name="theImage" Aspect="AspectFit" BackgroundColor="Purple" />
			<Button x:Name="btEmu" Text="Launch" BackgroundColor="Green" TextColor="White" />
			<StackLayout Orientation="Horizontal">
				<Button x:Name="btCoin" Text="Insert Coin" />
				<Button x:Name="btP1Start" Text="Start" />
				<Button x:Name="btP1Left" Text="&lt;" />
				<Button x:Name="btP1Right" Text="&gt;" />
			</StackLayout>
			<Button x:Name="btP1Shoot" Text="Fire" />
		</StackLayout>
	</ScrollView>
</ContentPage>